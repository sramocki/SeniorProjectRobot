<Window x:Class="RobotClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotClient"
        KeyDown="Key_down"
        KeyUp="Key_up"
        mc:Ignorable="d"
        Title="Robot Client" Height="800" Width="800" ResizeMode="NoResize">
    <Grid x:Name="backgroundGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="233*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name ="LogField" Height="146" Margin="90,608,32,15" TextWrapping="Wrap" Width="670" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2"/>
        <Menu Margin="0,0,0,740" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="31">
            <MenuItem Header="_File">
                <MenuItem Header="_Register Vehicles" InputGestureText="Ctrl + R" Click="Register_Click" />
                <MenuItem Header="_Export Data" InputGestureText="Ctrl + U" Click="ExportData_Click" />
                <MenuItem Header="_Import Data" InputGestureText="Ctrl + I" Click="ImportData_Click" />
                <MenuItem Header="_Quit" InputGestureText="Alt + F4" Click="Shutdown_Click" />
            </MenuItem>
            <MenuItem Header="_Help" Height="26">
                <MenuItem Header="_About" Click="About_Click" />
            </MenuItem>
        </Menu>
        <RepeatButton Click="ButtonPress_Event" Content="Forward" HorizontalAlignment="Left" Margin="52,396,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1"/>
        <RepeatButton Click="ButtonPress_Event" Content="Backwards" HorizontalAlignment="Left" Margin="52,482,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1"/>
        <RepeatButton Click="ButtonPress_Event" Content="Left" HorizontalAlignment="Left" Margin="297,440,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2"/>
        <RepeatButton Click="ButtonPress_Event" Content="Right" HorizontalAlignment="Left" Margin="132,440,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.6,2.75" Grid.Column="1"/>
        <MediaElement Margin="297,116,259,409" OpacityMask="#FFFD1313" Grid.ColumnSpan="2"></MediaElement>
        <Rectangle Fill="#FFD0D0EC" Height="247" Margin="297,116,259,406" Stroke="Black" Width="236" Grid.ColumnSpan="2"/>
        <ListBox Name="deviceListMn" HorizontalAlignment="Left" Height="291" Margin="27,72,0,0" VerticalAlignment="Top" Width="176" SelectionChanged="DeviceList_SelectionChanged"/>
        <TextBox Name="ipBox" HorizontalAlignment="Left" Height="23" Margin="32,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" RenderTransformOrigin="0.908,-2.87" Grid.Column="1"/>
        <TextBox Name="deviceStatus" HorizontalAlignment="Left" Height="23" Margin="48,440,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127"/>
        <Button Content="Leader" Click="SetLeader" HorizontalAlignment="Left" Margin="27,542,0,0" VerticalAlignment="Top" Width="64" RenderTransformOrigin="0.481,1.932"/>
        <Button Content="Follower" Click="SetFollower" HorizontalAlignment="Left" Margin="125,542,0,0" VerticalAlignment="Top" Width="64" RenderTransformOrigin="0.481,1.932"/>
        <Button Content="Idle" Click="SetDefault" HorizontalAlignment="Left" Margin="75,487,0,0" VerticalAlignment="Top" Width="64" RenderTransformOrigin="0.481,1.932"/>
        <Label Content="Registered Device List" HorizontalAlignment="Left" Margin="27,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Selected IP " HorizontalAlignment="Left" Margin="69,36,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="88,393,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
